<div class="row">
  <h1> My Top 5 Songs </h1>
    <% @songs.each do |song| %>
      <div class="well well-lg">
        <% if song.artist.avatar_file_name != nil %>
          <%= image_tag song.artist.avatar.url(:thumb) %>
        <% end %>
      <h2><%= song.name %></h2>
	    <h3>by <%= song.artist.name %> </h3>
	    <p><% "#{song.rating}".to_i.times do |rank| %>
	            <span class="glyphicon glyphicon-star"></span>
           <% end %>
      </p>	             
     </div>
    <% end %>
</div>